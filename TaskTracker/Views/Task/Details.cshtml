@model TaskTracker.Models.Task

@{
    ViewBag.Title = "Task Details";
}

<h2 style ="text-align: center;">Task Details</h2>

<div>
    <h4>Title: @Model.Title</h4>
    <h4>Description: @Model.Description</h4>
    <h4>Due Date: @(Model.DueDate.HasValue ? Model.DueDate.Value.ToString("yyyy-MM-dd hh:mm:tt") : "")</h4>
    <h4>Status: @(Model.IsDone ? "Done" : "To Do")</h4>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index", "Task")" class="btn btn-secondary">Back to List</a>
    <a href="@Url.Action("Edit", "Task", new { id = Model.Id })" class="btn btn-primary ml-2">Update Task</a>
</div>